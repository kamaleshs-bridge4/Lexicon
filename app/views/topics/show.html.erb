<h1><%= @topic.name %></h1>

<p><%= @topic.lexicon %></p>

<ul>
  <li><%= link_to "Edit", edit_topic_path(@topic) %></li>
  <li><%= link_to "Destroy", topic_path(@topic), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %></li>
</ul>

<%= render "comments/comments", topic: @topic %>
